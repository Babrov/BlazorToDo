@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>


<h1>Todo (@items.Count(todo => !todo.IsDone))</h1>

<div class="list d-flex p-2 flex-column">
    @foreach (var item in items.Where(item => !item.IsDone))
    {
        <div class="card">
            <div class="card-body">
                <input @bind="item.Title"/>
                <p class="card-text">@item.Description</p>
                <input type="checkbox" @bind="item.IsDone"/>
            </div>
        </div>
    }
</div>

<h2>Completed (@completedItems.Count())</h2>

<div class="list-completed d-flex p-2 flex-column">
    @foreach (var item in completedItems)
    {
        <div class="card">
            <div class="card-body">
                <input @bind="item.Title"/>
                <p class="card-text">@item.Description</p>
                <input type="checkbox" @bind="item.IsDone"/>
            </div>
        </div>
    }
</div>

<input placeholder="Something todo" @bind="newTodo"/>
<button @onclick="AddTodo">Add todo</button>


@code {

    class ToDoItem
    {
        public bool IsDone { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
    }

    private string? newTodo;

    private readonly List<ToDoItem> items =
        new()
        {
            new ToDoItem { IsDone = true, Title = "Add modal", Description = "Modal form" },
            new ToDoItem { IsDone = false, Title = "Add validation", Description = "Just for testing validation" }
        };

    private List<ToDoItem> completedItems => items.Where(item => item.IsDone).ToList();

    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            items.Add(new ToDoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }

}